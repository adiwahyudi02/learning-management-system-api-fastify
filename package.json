{
  "name": "learning-management-system-api-fastify",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --watch src --exec ts-node --files src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "docker:up": "docker compose --env-file .env.docker up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "seed": "ts-node ./seeds/seed.ts",
    "seed:reset": "ts-node ./seeds/seed.ts --reset",
    "test": "jest --runInBand --watchAll",
    "test:ci": "jest --runInBand --forceExit",
    "lint": "eslint \"{src,tests, seeds}/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\" \"seeds/**/*.ts\" \"tests/**/*.ts\"",
    "prepare": "husky"
  },
  "jest": {
    "transform": {
      "^.+\\.[t|j]sx?$": "babel-jest"
    }
  },
  "author": "Adi Wahyudi",
  "license": "ISC",
  "dependencies": {
    "@fastify/compress": "^8.1.0",
    "@fastify/cors": "^11.0.1",
    "@fastify/helmet": "^13.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "@sinclair/typebox": "^0.34.38",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "fastify": "^5.4.0",
    "fastify-plugin": "^5.0.1",
    "mongoose": "^8.16.5"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-typescript": "^7.27.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "@jest/globals": "^30.0.5",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "babel-jest": "^30.0.5",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "lint-staged": "^16.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint",
      "npm run format"
    ]
  }
}
